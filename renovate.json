{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>juliushenke/renovate-preset"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "packageRules": [
    {
      "description": "Ignore outdated dependencies required by TorProject descriptor library",
      "managers": [
        "gradle"
      ],
      "packagePatterns": [
        "^commons-codec",
        "^org.apache.commons",
        "^com.fasterxml.jackson.core",
        "^org.slf4j",
        "^org.tukaani"
      ],
      "enabled": false
    },
    {
      "description": "Ignore specific docker images",
      "packagePatterns": [
        "^eclipse-temurin"
      ],
      "enabled": false
    },
    {
      "description": "Leaflet related updates",
      "packagePatterns": [
        "leaflet"
      ],
      "groupName": "leaflet",
      "prPriority": 0
    },
    {
      "description": "Limit @types/react version, due to react-infinite-scroller package not being maintained",
      "matchPackageNames": [
        "@types/react"
      ],
      "allowedVersions": "<=18.2.21"
    }
  ]
}
