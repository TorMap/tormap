{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "development"
  ],
  "labels": [
    "renovate"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Automatically merge all but major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    }
  ],
  "automergeType": "branch",
  "stabilityDays": 3,
  "prCreation": "not-pending"
}
