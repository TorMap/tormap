{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "dev"
  ],
  "labels": [
    "renovate"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "rebaseWhen": "behind-base-branch",
  "automergeType": "branch",
  "stabilityDays": 3,
  "prCreation": "immediate",
  "packageRules": [
    {
      "description": "Group all non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "non-major"
    },
    {
      "description": "Group major dev updates",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "major-dev"
    },
    {
      "description": "Ignore outdated dependencies required by TorProject descriptor library",
      "managers": [
        "gradle"
      ],
      "packagePatterns": [
        "^commons-codec",
        "^org.apache.commons",
        "^com.fasterxml.jackson.core",
        "^org.slf4j",
        "^org.tukaani"
      ],
      "enabled": false
    }
  ]
}
